<div class="row">
  <div class="col-md-9">
    <div class="panel panel-primary">
      <div class="panel-heading">
        Evaluations
      </div>
      <div class="panel-body">

        <% @evaluations.each do |evaluation| %>
        <div class="row">
          <div class="col-md-7">
            <% if evaluation.color == 1 %>
            <h3> Green </h3>
            <% else %>
              <% if evaluation.color == 2 %>
                <h3> Yellow </h3>
              <% else %>
                <h3> Red </h3>
              <% end %>
            <% end %>
            <h4><%= evaluation.date %></h4>
            <p><%=  evaluation.remark %></p>
          </div>
          <div class="col-md-3 right">
            <%= link_to 'Edit', edit_batch_student_evaluation_path(@student.id, evaluation.id), class:'btn btn-primary' %>
            <%= link_to 'Delete', batch_student_evaluation_path(@student.id, evaluation.id), method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-danger' %>
        </div>
        <% end %>

      </div>
    </div>
  </div>
</div>
