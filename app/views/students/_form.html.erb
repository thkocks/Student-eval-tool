<%= form_for [@batch, @student] do |f| %>
  <%= render "shared/error_messages", :target => @student %>

  <div class="form-group">
    <label>First Name</label>
    <%= f.text_field :first_name, placeholder: "First Name", class: "form-control" %>
  </div>

  <div class="form-group">
    <label>Last Name</label>
    <%= f.text_field :last_name, placeholder: "Last Name", class: "form-control" %>
  </div>

  <div class="form-group">
    <label>Photo</label>
    <%= f.url_field :photo, placeholder: "Student Photo", class: "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit "Save", class: "btn btn-primary" %>
  </div>

  <%= link_to "Back", batch_students_path(batch_id: @batch.id), class: "btn btn-default" %>
<% end %>
